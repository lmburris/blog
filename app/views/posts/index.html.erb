<div id="blog-index">
  <% @posts.each do |post| %>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 individual-post">
        <h2><%= link_to post.title, post, class: "text" %></h2>
        <p><%= link_to post.body, post, class: "text" %><%= link_to "  read more >", post %></p>
        <p><%= "Edit", edit_post_path(post), class: "purple" %> 
        | <%= "Delete", post, method: :delete, data: { confirm: 
        "Are you sure you want to delete this post?" }, class: "purple" %></p>
       </div>
    </div>
  <% end %>
</div>

<%= link_to 'New Post', new_post_path %>
